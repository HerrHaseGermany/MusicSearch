{
  "manifest_version": 3,
  "name": "MusicSearch",
  "version": "0.1.0",
  "description": "Advanced search for Apple Music with playlist-aware results.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "sidePanel",
    "scripting",
    "tabs",
    "unlimitedStorage",
    "webRequest"
  ],
  "host_permissions": [
    "https://music.apple.com/*",
    "https://amp-api.music.apple.com/*",
    "https://api.music.apple.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": ["https://music.apple.com/*"],
      "js": ["content-script.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["page-bridge.js"],
      "matches": ["https://music.apple.com/*"]
    }
  ],
  "action": {
    "default_title": "MusicSearch",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
